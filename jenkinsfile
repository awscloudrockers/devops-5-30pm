pipeline {
    agent any
    stages {
        stage ("1. Install Nginx and Create Directories") {
            steps {
                sh "sudo apt update"
                sh "sudo apt install -y nginx"
                sh "mkdir -p mybond"
                sh "mkdir -p james"
            }
        }
        
        stage ("2. Create Test File in mybond Directory") {
            steps {
                // Creates a file named test.txt inside the mybond directory
                sh "echo 'This is a test file' > mybond/test.txt"
                sh "date > mybond/date.txt"
            }
        }

        stage ("3. Create Another Test File in james Directory") {
            steps {
                // Creates another test file in the james directory
                sh "echo 'This is another test file' > james/test1.txt"
                sh "date > james/date.txt"
            }
        }
    }
}
